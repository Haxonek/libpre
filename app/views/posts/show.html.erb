
<div class="container">
  <h1><%= @post.title %> | <%= @post.hits %> hits</h1>
  <% @post.post_items.each do |post_item| %>
    <div class="wrapper editable">
      <% unless post_item.image_title.blank? %>
        <h1><%= raw @markdown.render(post_item.image_title) %></h1>
      <% end %>
      <%= image_tag "http://placekitten.com/900/600", class: "img-item" %>
      <% unless post_item.description.blank? %>
        <p><%= raw @markdown.render(post_item.description) %></p>
      <% end %>
    </div>
  <% end %>
</div>
