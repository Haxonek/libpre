<div class="nested-fields">
  <div class="field">
    <%= f.label :image_title %>
    <%= f.text_field :image_title %>
    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/png,image/jpeg' %>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= link_to_remove_association "Remove", f %>
</div>
